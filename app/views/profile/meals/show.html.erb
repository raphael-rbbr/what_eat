<div class="card-meal">
  <%= cl_image_tag @recipe.recipe_photo.key, height: 300, width: 400, crop: :fill %>
  <div class="card-meal-info">
    <h2><%= @recipe.title %></h2>
    <h3>Preparation: <%= @recipe.prep_time %> minutes</h3>
    <h3>Servings: <%= @recipe.servings %></h3>
  </div>

  <div class="card-meal-instructions" >
    <p><%= @recipe.instructions %></p>
  </div>

  <div class="card-meal-ingredients" >
    <% @meal[0].ingredients.each do |i| %>
      <li><%= i.description %></li>
    <% end %>
  </div>
</div>
